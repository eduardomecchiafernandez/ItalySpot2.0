generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Monument {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  city        String?
  region      String?
  lat         Float?
  lon         Float?
  modelUrl    String?  @map("model_url")
  sketchfabUid String? @map("sketchfab_uid")
  description String? // ✅ rimosso @default(null)
  era         String? // ✅ rimosso @default(null)
  source      String? // ✅ rimosso @default(null)
  createdAt   DateTime @default(now())
}
